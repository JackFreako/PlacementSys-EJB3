        <init-on-startup>true</init-on-startup>
        <transaction-type>Container</transaction-type>
    </session>
    <session>
        <ejb-name>UsersBL</ejb-name>        
        <business-remote>com.placement.business.UsersBLRemote</business-remote>
        <ejb-class>com.placement.business.UsersBL</ejb-class>                
        <session-type>Stateless</session-type>
        <init-on-startup>true</init-on-startup>
        <transaction-type>Container</transaction-type>
    </session>
